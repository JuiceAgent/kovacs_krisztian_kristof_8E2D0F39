<body>
    <div class="container">
        <!-- 1. OLDAL: Kezd≈ëlap -->
        <div id="homePage" class="page active">
            <h1>üéÆ Vide√≥j√°t√©k Kv√≠z</h1>
            <p class="center">Teszteld a vide√≥j√°t√©k tud√°sodat!</p>
            <div class="center">
                <button onclick="startQuiz()">Kv√≠z Kezd√©se</button>
            </div>
        </div>

        <!-- 2. OLDAL: Kv√≠z -->
        <div id="quizPage" class="page">
            <h1>K√©rd√©s <span id="questionNumber">1</span>/5</h1>
            <div class="question-text" id="questionText"></div>
            <div id="answersContainer"></div>
        </div>

        <!-- 3. OLDAL: Eredm√©nyek -->
        <div id="resultsPage" class="page">
            <h1>Eredm√©nyek</h1>
            <div class="score-display">
                Pontsz√°m: <span id="finalScore">0</span>/5
            </div>
            <div class="stats" id="statsContainer"></div>
            <div class="center">
                <button onclick="restartQuiz()">√öj J√°t√©k</button>
            </div>
        </div>
    </div>

    <script>
        // K√©rd√©sek t√∂mbje
        const questions = [
            {
                question: "Melyik √©vben jelent meg a Super Mario Bros?",
                answers: ["1983", "1985", "1987", "1990"],
                correct: 1
            },
            {
                question: "Ki a f≈ëszerepl≈ë a The Legend of Zelda j√°t√©kokban?",
                answers: ["Zelda", "Link", "Ganon", "Mario"],
                correct: 1
            },
            {
                question: "Melyik nem egy PlayStation exkluz√≠v j√°t√©k?",
                answers: ["God of War", "Halo", "The Last of Us", "Uncharted"],
                correct: 1
            },
            {
                question: "H√°ny blokk t√≠pus van alapb√≥l a Minecraftban?",
                answers: ["50-n√©l kevesebb", "50-100 k√∂z√∂tt", "100-200 k√∂z√∂tt", "200 felett"],
                correct: 3
            },
            {
                question: "Melyik j√°t√©k nem egy battle royale?",
                answers: ["Fortnite", "Apex Legends", "Overwatch", "PUBG"],
                correct: 2
            }
        ];

        let currentQuestion = 0;
        let score = 0;
        let answeredQuestions = [];

        // 1. F√úGGV√âNY: Kv√≠z ind√≠t√°sa (param√©teres f√ºggv√©ny)
        function startQuiz() {
            currentQuestion = 0;
            score = 0;
            answeredQuestions = [];
            showPage('quizPage');
            displayQuestion();
        }

        // 2. F√úGGV√âNY: Oldal v√°lt√°s
        function showPage(pageId) {
            const pages = document.querySelectorAll('.page');
            // Ciklus: v√©gigmegy√ºnk az oldalakon
            for (let i = 0; i < pages.length; i++) {
                pages[i].classList.remove('active');
            }
            document.getElementById(pageId).classList.add('active');
        }

        // 3. F√úGGV√âNY: K√©rd√©s megjelen√≠t√©se
        function displayQuestion() {
            const q = questions[currentQuestion];
            document.getElementById('questionNumber').textContent = currentQuestion + 1;
            document.getElementById('questionText').textContent = q.question;
            
            const container = document.getElementById('answersContainer');
            container.innerHTML = '';
            
            // Ciklus: v√©gigmegy√ºnk a v√°laszokon
            for (let i = 0; i < q.answers.length; i++) {
                const btn = document.createElement('button');
                btn.className = 'answer-btn';
                btn.textContent = q.answers[i];
                btn.onclick = function() { checkAnswer(i); };
                container.appendChild(btn);
            }
        }

        // 4. F√úGGV√âNY: V√°lasz ellen≈ërz√©se (param√©teres)
        function checkAnswer(selected) {
            const q = questions[currentQuestion];
            const buttons = document.querySelectorAll('.answer-btn');
            
            // Logikai m≈±velet √©s el√°gaz√°s
            if (selected === q.correct) {
                buttons[selected].classList.add('correct');
                score++; // Aritmetikai m≈±velet: √∂sszead√°s
            } else {
                buttons[selected].classList.add('wrong');
                buttons[q.correct].classList.add('correct');
            }
            
            // T√°roljuk a v√°laszt
            answeredQuestions.push({
                question: currentQuestion,
                selected: selected,
                correct: q.correct,
                isCorrect: selected === q.correct
            });
            
            // Letiltjuk a gombokat
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].disabled = true;
            }
            
            setTimeout(function() {
                currentQuestion++; // Aritmetikai m≈±velet: n√∂vel√©s
                
                // El√°gaz√°s: van-e m√©g k√©rd√©s?
                if (currentQuestion < questions.length) {
                    displayQuestion();
                } else {
                    showResults();
                }
            }, 1500);
        }

        // 5. F√úGGV√âNY: Eredm√©nyek megjelen√≠t√©se
        function showResults() {
            showPage('resultsPage');
            document.getElementById('finalScore').textContent = score;
            
            // PROGRAMOZ√ÅSI T√âTELEK:
            
            // 1. √ñSSZEGZ√âS: √∂sszes v√°lasz √∂sszesz√°mol√°sa
            let totalAnswers = answeredQuestions.length;
            
            // 2. SZ√ÅML√ÅL√ÅS: helyes v√°laszok sz√°ma
            let correctCount = 0;
            for (let i = 0; i < answeredQuestions.length; i++) {
                if (answeredQuestions[i].isCorrect) {
                    correctCount++; // Aritmetikai m≈±velet
                }
            }
            
            // 3. MAXIMUM: legjobb sorozat keres√©se
            let maxStreak = findMaxStreak(answeredQuestions);
            
            // Aritmetikai m≈±velet: sz√°zal√©k sz√°m√≠t√°s
            let percentage = (score / questions.length) * 100;
            
            // Eredm√©nyek megjelen√≠t√©se
            const statsHTML = `
                <p><strong>√ñsszes k√©rd√©s:</strong> ${totalAnswers}</p>
                <p><strong>Helyes v√°laszok:</strong> ${correctCount}</p>
                <p><strong>Sikeres:</strong> ${percentage.toFixed(0)}%</p>
                <p><strong>Leghosszabb sorozat:</strong> ${maxStreak} helyes v√°lasz</p>
            `;
            
            document.getElementById('statsContainer').innerHTML = statsHTML;
        }

        // 6. F√úGGV√âNY: Maximum/leghosszabb sorozat keres√©se (PROGRAMOZ√ÅSI T√âTEL)
        function findMaxStreak(answers) {
            let maxStreak = 0;
            let currentStreak = 0;
            
            // Ciklus: v√©gigmegy√ºnk a v√°laszokon
            for (let i = 0; i < answers.length; i++) {
                // El√°gaz√°s √©s logikai m≈±velet
                if (answers[i].isCorrect) {
                    currentStreak++; // Aritmetikai m≈±velet
                    // El√°gaz√°s: √∫j maximum?
                    if (currentStreak > maxStreak) {
                        maxStreak = currentStreak;
                    }
                } else {
                    currentStreak = 0;
                }
            }
            
            return maxStreak;
        }

        // 7. F√úGGV√âNY: √öjraind√≠t√°s
        function restartQuiz() {
            startQuiz();
        }
    </script>
